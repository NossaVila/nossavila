.container.center.card
  %h2.subtitle
    -#Editar #{resource_name.to_s.humanize}
    Editar usuário
  %hr
  %br/
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .formleft
      .inleft
        = f.label :first_name, "Nome"
        %br/
        = f.label :last_name, "Sobrenome"
        %br/
        = f.label :cpf, "CPF"
        %br/
        = f.label :address, "Endereço"
        %br/
        = f.label :cep, "CEP"
        %br/
        = f.label :email
        %br/
        = f.label :password, "Senha", :class => "fieldpass"
        %br/
        = f.label :password_confirmation, "Confirme a senha", :class => "fieldpass"
        %br/
        = f.label :current_password, "Senha atual", :class => "fieldcurrpass"
      
    .formright
      = f.text_field :first_name      
      = f.text_field :last_name
      = f.text_field :cpf
      = f.text_field :address
      = f.text_field :cep
      = f.email_field :email, autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Esperando confirmação do email: #{resource.unconfirmed_email}
      = f.password_field :password, autocomplete: "off"
      = f.password_field :password_confirmation, autocomplete: "off"
      = f.password_field :current_password, autocomplete: "off"
      %br/
      %br/
    .actions
      = f.submit "Editar"
  %i{:class => "fieldpass"} deixe em branco caso não queira mudar
  %br/
  %i{:class => "fieldcurrpass"} precisamos da sua senha atual para efetuar as mudanças
  %br/
  %br/
  %p
    Insatisfeito? #{button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Está certo disso?" }, method: :delete}
