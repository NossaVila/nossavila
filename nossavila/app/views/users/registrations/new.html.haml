.container.center.card.users_page
  %h2.subtitle Registre-se
  %br/
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :first_name
      = f.text_field :first_name, autofocus: true, :class => "field"
    .field
      = f.label :last_name
      = f.text_field :last_name, :class => "field"
    .field
      = f.label :cpf, "CPF"
      = f.text_field :cpf, :class => "field"
    .field
      = f.label :address
      = f.text_field :address, :class => "field"
    .field
      = f.label :cep, "CEP"
      = f.text_field :cep, :class => "field"
    .field
      = f.label :email
      = f.email_field :email, :class => "field"
    -# nÃ£o vamos lidar com username por enquanto
    -#.field
    -#  = f.label :username, "Nome de usuÃ¡rio"
    -#  %br/
    -#  = f.text_field :username, :class => "field"
    .field
      = f.label :password
      - if @minimum_password_length
        %em (no minimo #{@minimum_password_length} caracteres)
      = f.password_field :password, autocomplete: "off" , :class => "field"
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off" , :class => "field"
    .actions.field
      = f.submit "Registrar-se", :class => "btn"
