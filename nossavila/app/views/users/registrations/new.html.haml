.container.center.card
  %h2.subtitle Registrar
  %hr
  %br/
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .formleft
      .inleft
        = f.label :first_name, "Nome"
        %br/
        = f.label :last_name, "Sobrenome"
        %br/
        = f.label :cpf, "CPF"
        %br/
        = f.label :address, "Endereço"
        %br/
        = f.label :cep, "CEP"
        %br/      
        = f.label :email, "Email"
        %br/
        = f.label :password, "Senha", :class => "fieldcurrpass"
        %br/
        = f.label :password_confirmation, "Confirme a senha"
        .actions
          = f.submit "Registrar-se", :class => "submitlink"

    .formright
      = f.text_field :first_name, autofocus: true
      = f.text_field :last_name    
      = f.text_field :cpf
      = f.text_field :address
      = f.text_field :cep
      = f.email_field :email
      = f.password_field :password, autocomplete: "off" 
      %br/
      = f.password_field :password_confirmation, autocomplete: "off" 
      %br/
      %br/
      %br/
    - if @minimum_password_length
      %br/
      %em{:class => "fieldcurrpass"} no minimo #{@minimum_password_length} caracteres
