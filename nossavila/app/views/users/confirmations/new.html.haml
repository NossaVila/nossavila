.container.center.card.users_page
  %h2 Reenviar instruções de confirmação de senha
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email, :class => "fieldnew")
    .actions
      = f.submit "Reenviar instruções de confirmação de senha"
  = render "users/shared/links"
