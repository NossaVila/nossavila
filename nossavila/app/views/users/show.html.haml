#container
  .barcontainer
    .profilebar
      .profile-line
        .profilecell-left
          %h2 Nome:
        .profilecell-right
          %h2= current_user.first_name
      .profile-line
        .profilecell-left
          %h2 Sobrenome:
        .profilecell-right
          %h2= current_user.last_name
      .profile-line
        .profilecell-left
          %h2 Email:
        .profilecell-right
          %h2= current_user.email
      - unless current_user.additional_informations.nil?
        - current_user.additional_informations.each do |info|
          .profile-line
            .profilecell-left
              %h2= info.title + ":"
            .profilecell-right
              %h2= info.information            
        .btn
          %i{:class => "fa fa-plus fa-1g", :style => "color:white"}
            Adicionar Informação
 
  .servicescontainer
    %a{:href => new_service_path, :class => "link"}
      .btn
        %i{:class => "fa fa-plus fa-1g", :style => "color:white"}
          Criar Serviço 

    %br
    - @services.each do |service| 
      %a{:href => service_path(service)}
        .servicecard
          %h2{:class => "cardtitle"}= service.title
          %p{:class => "carddescription"}= service.description
          %h4{:class => "cardowner"}= service.user.first_name
