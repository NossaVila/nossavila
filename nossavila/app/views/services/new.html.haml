.container.center.card
  %h3{:class => "subtitle"} Novo Serviço
  %hr
  = form_tag services_path do
    .fieldnewleft
      = label :service, :title, "Título", :class => "fieldnew"
      = text_field :service, 'title', :class => "fieldnew"
      = label :service, :description, "Descrição", :class => "fieldnew"
      = text_area :service, 'description', :rows => 15, :cols => 40, :class => "fieldnew"
      = submit_tag "Criar", :class => "fieldnew"
      
    .categorylabel
      = label :service, :categories, "Categorias"
      %br
      - @categories.each do |cat|
        = label :service, :category, cat.name
        = check_box(:service, :categories, {:multiple => true, :class => "categorycheckbox"}, cat.name, nil)
