.category-container
  .category-table
    // %div.category-header
    //   %h3= @root.name == "root" ? "Categorias" : @root.name.capitalize
    .boxes
      - @categories.sort_by{|category| category.name.capitalize}.each_slice(3).with_index do |slice, i|
        .box-row
          - slice.each_with_index do |category, j|
            %div{:class => "hvr-shrink box box#{(i+j)%3+1}"}
              %a{:class => "fill-div", :href => categories_path(:root => category.name)}
                %h3= category.name.capitalize
  
